<!-- Specify a layout for the engine-->
<!DOCTYPE html>
<html>
<head>
  <title>Booking</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    "booking/application", media: "all" %>
  <%= javascript_include_tag "booking/application" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="../assets/calendar-css/calendar.min.css">
</head>
<body>
	<div class="container">
		<ul class="nav nav-tabs">
			<li><%= link_to "My Services", root_path %></li>
			<li><%= link_to "Calendar", service_calendars_path %></li>
		</ul>

		<% if flash[:notice] %>
			<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:notice] %>
			</div>
		<% elsif flash.now[:alert] %>
			<div class="alert alert-danger">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash.now[:alert] %>
			</div>
		<% elsif flash[:alert] %>
			<div class="alert alert-warning">
				<button type="button" class="close" data-dismiss-"alert">&times;</button>
				<%= flash[:alert] %>
			</div>
		<% end %>
		<%= yield %>
	</div>  
	<script type="text/javascript" src="../assets/calendar-scripts/underscore-min.js"></script>
	<script type="text/javascript" src="../assets/calendar-scripts/calendar.js"></script>
	<script type="text/javascript" src="../assets/calendar-scripts/moment.js"></script>     
</body>
</html>
