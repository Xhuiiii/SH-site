<p id="notice"><%= notice %></p>

<h1>Listing Todays Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Service type id</th>
      <th>Reservation id</th>
      <th>Customer id</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todays_bookings.each do |todays_booking| %>
      <tr>
        <td><%= todays_booking.date %></td>
        <td><%= todays_booking.service_type_ID %></td>
        <td><%= todays_booking.reservation_ID %></td>
        <td><%= todays_booking.customer_ID %></td>
        <td><%= todays_booking.rate %></td>
        <td><%= link_to 'Show', todays_booking %></td>
        <td><%= link_to 'Edit', edit_todays_booking_path(todays_booking) %></td>
        <td><%= link_to 'Destroy', todays_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

